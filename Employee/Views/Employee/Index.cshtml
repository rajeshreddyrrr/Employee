@using Employee.DTOs
@model IEnumerable<EmployeeDto>

<table class="table">
    <td>
        <a href="@Url.Action("AddSalary")" class="btn btn-secondary">Add Salary</a>
    </td>

    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.City</td>
                <td>
                    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#editEmployeeModal" data-id="@employee.Id">Edit</a>
                    <a href="#" class="btn btn-success" data-toggle="modal" data-target="#viewSalaryModal" data-id="@employee.Id">View Salary</a>
                </td>
            </tr>
        }
    </tbody>
</table>
