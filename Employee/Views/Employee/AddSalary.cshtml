@using Employee.DTOs
@model EmployeeSalaryDto

@{
    ViewData["Title"] = "Add Monthly Salary";
}

<h2>Add Monthly Salary for @ViewBag.EmployeeName</h2>

<form asp-action="AddSalary">
   @*  <input type="hidden" asp-for="EmployeeId" /> *@

    <div class="form-group">
        <label asp-for="SalaryDate" class="control-label"></label>
        <input asp-for="SalaryDate" class="form-control" type="date" />
        <span asp-validation-for="SalaryDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
